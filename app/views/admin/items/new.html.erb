
<div class="container">
    <div class="mt-4 ml-5 pl-5">
    <h5 class="d-inline-flex bg-light mt-4 mr-5 ml-5 px-4 mb-5">商品新規登録</h5>
     <%= form_with model:@item,url:"/admin/items",method: :post do |f| %>
     <div class="form-group ml-5">
     <label class="ml-5 pl-5 mr-5 pr-5 mx-auto">商品画像</label>
      <%= f.file_field:image,placeholder:"ファイルを選択",accept:"image/*" ,class:"from-label col-4"%></br>
      </div>
      <div class="row form-group mt-2 mx-auto">
      <label class="ml-5 pl-5 mr-5">商品名</label>
      <%= f.text_field:name,class:" form-control col-4 ml-3"%></br>
      </div>
      
     <div class="row form-group mt-2 mx-auto">
      <label class="align-top ml-5 pl-5 mr-5">商品説明</label>
      <%= f.text_area:introduction,class:"form-control col-4" %></br>
      </div>
      <div class="row mb-3 mt-2 mx-auto">
      <label class=" ml-5 pl-5 mr-5 form-group ">ジャンル</label>
      <%= f.select :genre_id,options_from_collection_for_select(Genre.all,:id,:name),class:"form-control form-select col-4" %>
    </div>
    <div class="row form-group mt-2 mx-auto ">
      <label class="mt-2 ml-5 pl-5 mr-5">税抜価格</label>
      <%= f.text_field :price,class:"form-control col-4" %> 円
    </div>
    <div class="row  form-group mt-2 mx-auto">
      <label class="ml-5 pl-5 mr-5">販売ステータス</label>
      <%= f.radio_button :is_active, "販売中" %>
      <%= f.label :is_active, "販売中",class:"mr-3" %>
      <%= f.radio_button :is_active, "販売停止中" %>
      <%= f.label :is_active, "販売停止中" %>
    </div>
    </div>
    <div class="row">
    <%= f.submit "新規登録",class:"btn btn-success mx-auto px-4" %>
     </div>

    <% end %>

   
</div>