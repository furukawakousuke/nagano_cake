<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="top">
      <h5 class="bg-light mt-4 d-inline-flex px-3">商品一覧</h5>
      <%= link_to "＋" ,'/admin/items/new',class:"float-right mt-3" %>
      </div>
      <table class="w-100 mt-4 border-top border-bottom">
        <thead class="bg-light">
          <th class="pr-0 py-2 ml-2">商品ID</th>
          <th class="pr-5">商品名</th>
          <th class="">税抜価格</th>
          <th class="pr-5 ">ジャンル</th>
          <th class="pr-0">ステータス</th>
        </thead>
        <% @items.each do |item| %>
        <tbody class="py-2">
          <td class="py-2"><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td><% item.is_active %>
          <% if item.is_active == "販売中"  %>
       <strong class="text-success">販売中</strong>
     <% else %>
       <strong class="text-black-50">販売停止中</strong>
     <% end %></td>
        </tbody>
        <% end %>
      </table>
      
      <div class="row">
        <div class="col-5"></div>
        <%= paginate @items %>
      </div>

    </div>
  </div>
</div>
