<div class="container">
  <h5 class="bg-light d-inline-flex px-4 my-4">配送先編集</h5>
  <%= form_with model:@address,url: address_path(@address.id), method: :patch do |f| %>
  <div class="row">
    <div class="col-3 mb-3">郵便番号(ハイフンなし)</div>
    <div class="col-6"><%= f.text_field :postal_code,placeholder: "0000000" %></div>
  </div>

  <div class="row ">
    <div class="col-3 mb-3">住所</div>
    <div class="col-6 "><%= f.text_field :address,placeholder: "東京都渋谷区代々木神園町0-0",class:"w-100" %></div>
  </div>

  <div class="row">
    <div class="col-3 mb-3">宛先</div>
    <div class="col-3"><%= f.text_field:name, placeholder: "令和道子" %></div>
    <div class="col-5 text-right"><%= f.submit "変更内容を保存",class:"btn btn-success btn-sm font-weight-bold px-5" %></div>
  </div>
  <% end %>
  
</div>