<div class="container">
  <h5 class="d-inline-block bg-light mt-4 mb-4 px-4">ログイン</h5>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<p class="ml-4 bg-light px-4 d-inline-flex mt-3">会員の方はこちらからログイン</p>
  <div class="form-group row">
    <div class="col-2"></div>
    <label class="mr-3">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "name@example.com",class:" col-5 d-inline-flex" %>
  </div>

  <div class="form-group row">
    <div class="col-2"></div>
    <label class="mr-5">パスワード</label>
    <%= f.password_field :password, autocomplete: "current-password",class:" col-5 d-inline-flex" %>
  </div>

  <div class="actions row">
    <div class="col-3 ml-4 mr-2"></div>
    <div class="col-">
    <%= f.submit "ログイン",class:"btn btn-primary btn-sm px-4 mt-4" %>
    </div>
  </div>
<% end %>

  <p class="d-inline-flex bg-light px-4 ml-5 mt-5">会員登録がお済みでない方</p>
  <div class="row ml-5">
    <div class="col-12 ml-5">
<p class="d-inline-flex mt-2"><span><%= render "public/shared/links" %></span>　からログインしてください。</p>

</div>
</div>
</div>