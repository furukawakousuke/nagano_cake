<div class="container">
<div class="row">
<div class="col-10 text-center">

<h5 class="inline-block bg-light w-25 mt-5">管理者ログイン</h5>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control form-control-sm col-5 d-inline-flex" %>
  </div>

  <div class="field">
    <label>パスワード</label>
    <%= f.password_field :password, autocomplete: "current-password",class:"form-control form-control-sm col-5 d-inline-flex" %>
  </div>

  <!-- <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %> -->

  <div class="actions">
    <%= f.submit "ログイン",class:"btn btn-info" %>
  </div>
<% end %>

<!-- <%= render "admin/shared/links" %> -->

</div>
</div>
</div>