<div class="container">
<h5 class="bg-light d-inline-flex px-4 my-4">新規会員登録</h5>
<div class="row">
 <div class="col-auto"></div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table>
        <tr><th class="col-3">名前</th>
            <td class="mr-2"><label class="mr-1">(姓)　</label><%= f.text_field :first_name, placeholder: "令和",class:"col-4 mr-4 mb-2" %>
            <label>(名)　</label><%= f.text_field :last_name, placeholder: "花子",class:"col-4" %></td></tr>
            
        <tr><th class="col-3">フリガナ</th>
            <td><label>(セイ)</label> <%= f.text_field :first_name_kana ,placeholder: "レイワ",class:"col-4 mr-4 mb-2" %>
            <label>(メイ)</label><%= f.text_field :last_name_kana, placeholder: "ハナコ",class:"col-4" %></td></tr>
            
        <tr><th class="col-3">メールアドレス</th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com",class:"col-4 ml-5 mb-2" %></td></tr>
        
        <tr class="mb-3"><th class="col-3">郵便番号(ハイフンなし)</th>
            <td class="mb-3 ml-4"><%= f.text_field :postal_code ,placeholder: "0000000",class:"col-4 ml-5 mb-2" %></td></tr>
            
        <tr><th class="col-3">住所</th>
            <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0−0",class:"col-6 w-100 ml-5 mb-2" %></td></tr>
            
        <tr><th class="col-3">電話番号</th>
            <td><%= f.text_field :telephone_number, placeholder: "0000000000",class:"col-4 ml-5 mb-2" %></td></tr>
            
            <tr><th class="col-3">パスワード(６文字)</th></th>
            <td>
            <% if @minimum_password_length %>
              <% end %>
             <%= f.password_field :password, autocomplete: "new-password",class:"col-4 ml-5 mb-2" %></td></tr>
             
            <tr><th class="col-3">パスワード(確認用)</th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password",class:"col-4 ml-5 mb-2" %></td></tr>
        <tr><th></th>
        
            <td><%= f.submit "新規登録",class:"btn btn-success btn-sm ml-5 px-5 font-weight-bold" %></td></tr>
    </table>
  
<% end %>
</div>
<h5 class="d-inline-flex bg-light px-4 ml-4 mt-3">既に登録済みの方</h5>
<div class="row ">
<div class="col-12 ml-5 ">
<p class="d-inline-flex mt-2"><span><%= render "public/shared/links" %></span>　からログインしてください。</p>
</div>
</div>
</div>