

<div class="ml-5">

<%= render 'layouts/genre', genres: @genres %>
 </div>
 <div class="container ">
   <h5 class="bg-light d-inline-flex px-4 my-4">商品一覧</h5>
 <div class="row">

    <%  @items.each do |item| %>

    <div class="col-2 ">
    <%= link_to item_path(item.id) do %>
    <%= image_tag item.get_image(100,100) %>
    <% end %><br>
    <%= item.name %><br>
    <%=  item.price %>
   </div>
   <% end %>
</div>

</div>
  <div class="mx-auto"><%= paginate @items %></div>






