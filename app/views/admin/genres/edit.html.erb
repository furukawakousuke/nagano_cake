<div class="container">
      <h5 class="d-inline-flex bg-light mt-5 px-3 mb-5">ジャンル編集</h5>
      <%= form_with model:@genre,url:admin_genre_path(@genre.id),method: :patch do |f| %>
  <div class="row">
    <div class="col-10">
      <label class="mr-3">ジャンル名</label>
      <%= f.text_field:name,class:"mx-4" %>
      <%= f.submit "変更を保存",class:"btn btn-success btn-sm ml-4 px-3" %>
      <% end %>
    </div>
    
  </div>
  
</div>