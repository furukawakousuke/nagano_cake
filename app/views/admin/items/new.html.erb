<div class="container"> 
<div class="row">
  <div class="col-auto mx-auto">
    <h5 class="d-inline-flex bg-light mt-5 mr-5 ">商品新規登録</h5>
     <%= form_with model:@item,url:"/admin/items",method: :post do |f| %>
     <div class="mx-auto ">
     <div class="form-group mx-auto">
     <label class="text-center control-label">商品画像</label>
    　<%= f.file_field:image,placeholder:"ファイルを選択",accept:"image/*" ,class:"text-center"%></br>
    　</div>
    　<div class="form-group mx-auto">
    　<label class="control-label ">商品名</label>
    　<%= f.text_field:name ,class:""%></br>
    　</div>
    　<div class="form-group mx-auto">
      <label class="control-label ">商品説明</label>
      <%= f.text_area:introduction,class:""%></br>
      </div>
      <label>ジャンル</label>
    
    </div>
    
    </div>
    
    <% end %>
    
    
    
  </div>
</div>
</div>