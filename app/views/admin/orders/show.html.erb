<div class="container">
<h5 class="bg-light d-inline-flex mt-4 px-4">注文履歴詳細</h5>
  <div class="row">
    <div class="col-md-12 pl-0">
      <table class="mt-2">
        <tr>
          <th class="pr-5">購入者</th>
          <td><%= link_to admin_customer_path(@order.customer.id) do %>
          <%= @order.customer.first_name %> <%= @order.customer.last_name %><% end %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order_detail.updated_at.strftime('%Y/%m/%d')  %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postal_code %>　<%= @order.address %><br>
          <%= @order.name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <%= form_with model:@order,url: admin_order_path(@order.id),method: :patch do |f| %>
          <th class="pr-4">注文ステータス</th>
          <td><%= f.select :status,{'入金待ち':'入金待ち', '入金確認':'入金確認', '製作中':'製作中', '発送準備中':'発送準備中', '発送中':4},{},{class:"form-control-sm"} %>
          <%= f.submit "更新",class:"btn btn-success btn-sm" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-7">
      <table>
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </thead>
        <tbody>
          <td><%= @order_detail.item.name %></td>
          <td><%= @order_detail.price %></td>
          <td><%= @order_detail.amount %></td>
          <td><%= @order_detail.price * @order_detail.amount %></td>
          <%= form_with model:@order_detail,url: admin_order_path(@order_detail.id),method: :patch do |f| %>
          <td><%= f.select :making_status,{"製作不可":"製作不可","制作待ち":"製作待ち", "製作中":"製作中", "製作完了":"製作完了"} %>
          <%= f.submit "更新" ,class:"btn btn-success btn-sm" %><% end %></td>
        </tbody>
      </table>
    </div>
  </div>
</div>