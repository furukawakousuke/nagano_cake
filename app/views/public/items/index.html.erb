
<div class="container ">
  <div class="row">
    <div class="col-3 ml-5 mt-3">
      <%= render 'layouts/genre', genres: @genres %>
    </div>
  <div class="col-8">
     <label class="mt-3"><strong class="h5">商品一覧</strong> 全<%= @items.count %>件</label>
         <div class="row">
           <%  @items.each do |item| %>
          <div class="itembox col-3">
            <table class="mr-0" style="table-layout:fixed;">
              <tr>
                <td class=""><%= link_to item_path(item.id) do %>
                    <%= image_tag item.get_image(100,100),:size => '130x130' %>
                    <% end %></td>
              </tr>
              <tr>
                <td><%= item.name %></td>
              </tr>
              <tr>
                <td><%=  item.with_tax_price %></td>
              </tr>  
             </table>
           </div>
           <% end %>
         </div>
  </div>
 </div>
</div>
  <div class="mx-auto mt-5"><%= paginate @items %></div>






