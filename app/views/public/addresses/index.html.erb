<div class="container">
  <h5 class="bg-light d-inline-flex px-4 my-4">配送先登録/一覧</h5>
  <%= form_with model:@address,url: addresses_path, method: :post do |f| %>
  <div class="row ">
    <div class="col-3 mb-3">郵便番号(ハイフンなし)</div>
    <div class="col-6"><%= f.text_field :postal_code,placeholder: "0000000" %></div>
  </div>

  <div class="row ">
    <div class="col-3 mb-3">住所</div>
    <div class="col-6 "><%= f.text_field :address,placeholder: "東京都渋谷区代々木神園町0-0",class:"w-100" %></div>
  </div>

  <div class="row">
    <div class="col-3 mb-3">宛先</div>
    <div class="col-3"><%= f.text_field:name, placeholder: "令和道子" %></div>
    <div class="col-5 text-right"><%= f.submit "新規登録",class:"btn btn-success btn-sm font-weight-bold px-5" %></div>
  </div>
  <% end %>

  <div class="row mt-4">
    <div class="col-lg-8 col-md-">
    <table class="table table-bordered">
      <tr class="bg-light">
        <td class="col-1 px-1">郵便番号</td>
        <td class="col-3">住所</td>
        <td class="col-2 ">宛先</td>
        <td class="col-4" colspan="2"></td>
      </tr>
      <% @addresses.each do |addresses| %>
      <tbody>
      <tr>
        <td><%= addresses.postal_code %></td>
        <td><%= addresses.address %></td>
        <td><%= addresses.name %></td>
        <td class="d-inline-flex"><%= link_to "編集する",edit_address_path(addresses.id),class:"btn btn-success btn-sm ml- mr-3" %>
        <%= link_to "削除する",address_path(addresses.id),method: :delete,class:"btn btn-danger btn-sm ml-3 mr-3" %></td>
      </tr>
       <% end %>
      </tbody>
    </table>
   
    </div>
  </div>
</div>