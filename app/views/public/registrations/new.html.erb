<div class="container">
<h5 class="bg-light d-inline-flex px-3 my-4">新規会員登録</h5>
<div class="row">
 <div class="col-auto"></div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
</div>

  <div class="form-group row mb-3">
    <label class="col-3">名前</label>
    <div class="col-4 col-sm-auto d-inline-flex">
    <label>(姓)　</label>
    <%= f.text_field :first_name %>
    </div>
    <div class="col-4 col-sm-auto d-inline-flex">
    <label>(名)　</label>
    <%= f.text_field :last_name %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <label class="col-3">フリガナ</label>
    <div class="col-4 col-sm-auto d-inline-flex">
    <label>(セイ)</label>
    <%= f.text_field :first_name_kana %>
    </div>
    <div class="col-4 col-md-auto d-inline-flex">
    <label>(メイ)</label>
    <%= f.text_field :last_name_kana %>
    </div>
  </div>

  <div class="form-group row mb-3 ">
    <label class="col-3  mr-1">メールアドレス</label>
    <div class="col-4 ml-2 pl-1 px-5">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3  ">郵便番号(ハイフンなし)</label>
    <div class="col-4 ml-5 c">
    <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col">住所</label>
    <div class="col-4 ml-5">
    <%= f.text_field :address %>
    </div>
  </div>
  <div class="from-group row mb-3">
    <label class="col-3">電話番号</label>
    <div class="col-4 ml-5">
    <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-3">パスワード(６文字)</label>
    <% if @minimum_password_length %>
    <% end %>
    <div class="col-4 ml-5">
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-group row ">
    <label class="col-3">パスワード(確認用)</label>
    <div class="col-4 ml-5">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class:"btn btn-success btn-sm px-5 font-weight-bold" %>
  </div>
<% end %>



</div>



<%= render "public/shared/links" %>
